<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyStyle.Switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/blue</item>
        <item name="trackColorActive">@color/blue_light</item>
        <item name="colorSwitchThumbNormal">@color/gray_light</item>
        <item name="trackColorInactive">@color/gray</item>
    </style>

    <style name="ButtonForSettings" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:background">@drawable/no_border_btn</item>
        <item name="android:textColor">@color/settings_root_text</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonForMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16dp</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_10dp</item>
        <item name="iconTint">@color/activity_root_icon</item>
        <item name="android:textColor">@color/activity_root_text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:background">@drawable/ripple_for_btn</item>
    </style>

    <style name="text_placeholder_for_search">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_19sp</item>
        <item name="android:textColor">@color/search_root_text</item>
    </style>

    <style name="text_for_recycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
    </style>

    <style name="text_for_player_left">
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
        <item name="android:textColor">@color/text_for_player_left</item>
        <item name="android:textSize">@dimen/size_13sp</item>
    </style>

    <style name="text_for_player_right">
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:ellipsize">end</item>
        <item name="layout_constraintHorizontal_bias">1</item>
        <item name="android:layout_marginStart">@dimen/size_50dp</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="android:layout_marginTop">@dimen/size_8dp</item>
        <item name="android:textColor">@color/text_for_player_right</item>
        <item name="android:textSize">@dimen/size_13sp</item>
    </style>

    <style name="text_for_media_fragments">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_19sp</item>
        <item name="android:textColor">@color/text_media_fragments</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="yandex_medium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/size_22sp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outline</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/text_for_bottom_sheet_recycler</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>