<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyStyle.Switch" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="ButtonForSettings" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_16dp</item>
        <item name="android:background">@drawable/no_border_btn</item>
        <item name="android:textColor">@color/settings_root_text</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ButtonForMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/size_16dp</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_22sp</item>
        <item name="cornerRadius">@dimen/size_16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/size_10dp</item>
        <item name="iconTint">@color/activity_root_icon</item>
        <item name="android:textColor">@color/activity_root_text</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:background">@drawable/ripple_for_btn</item>
    </style>

    <style name="text_placeholder_for_search">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/size_16dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_19sp</item>
        <item name="android:textColor">@color/search_root_text</item>
    </style>

    <style name="text_for_recycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">@dimen/size_11sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
    </style>

</resources>