<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?actionBarItemBackground"
    android:backgroundTint="?attr/colorSecondary"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="@dimen/size_56dp"
        android:layout_height="@dimen/size_56dp"
        android:layout_marginStart="@dimen/size_16dp"
        android:layout_marginTop="@dimen/size_8dp"
        android:layout_marginBottom="@dimen/size_8dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/placeholder"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_8dp"
        android:paddingEnd="@dimen/size_8dp"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/text_for_bottom_sheet_recycler"
            android:textSize="@dimen/size_16sp"
            tools:text="Smells Like Teen Spirit"
            android:fontFamily="@font/ys_display_medium"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/count"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/size_11sp"
            android:fontFamily="@font/ys_display_medium"
            android:textColor="@color/text_for_bottom_sheet_recycler"
            tools:text="0 треков"
            android:ellipsize="end"
            android:maxLines="1"/>
    </LinearLayout>


</LinearLayout>