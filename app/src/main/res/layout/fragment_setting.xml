<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_frag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yp_interface"
    android:orientation="vertical"
    tools:context=".setting.ui.SettingFrag">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settings_root_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/settings"
            android:textColor="@color/settings_root_text"
            android:textFontWeight="500"
            android:textSize="@dimen/size_22sp" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:text="@string/theme_night"
        android:textAppearance="@style/MyStyle.Switch"
        android:textColor="@color/settings_root_text"
        android:theme="@style/MySwitch" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_share_app"
        style="@style/ButtonForSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:drawableEnd="@drawable/ic_share"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:text="@string/share_app" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_contact_support"
        style="@style/ButtonForSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:drawableEnd="@drawable/ic_support"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:text="@string/support_message" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_therms_use"
        style="@style/ButtonForSettings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:drawableEnd="@drawable/ic_go_to"
        android:gravity="start|center_vertical"
        android:paddingStart="@dimen/size_16dp"
        android:paddingEnd="@dimen/size_16dp"
        android:text="@string/therms_use" />

</androidx.appcompat.widget.LinearLayoutCompat>